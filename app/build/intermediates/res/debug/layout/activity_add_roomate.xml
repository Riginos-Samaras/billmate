<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.billmate.AddRoomateActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="63dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name:"
                    android:id="@+id/textView" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/name_editText"
                    android:hint="Write your name here" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="0.05">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Choose color:"
                    android:id="@+id/textView2" />

                <Button
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    android:id="@+id/general_color_button"
                    android:clickable="false"
                    android:enabled="false"
                    android:visibility="invisible"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"

                        app:cb_color="@color/green"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/green_button"

                        />


                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"

                        app:cb_color="@color/blue800"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/blue_button" />

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"

                        app:cb_color="@color/cyan800"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/cyan_button" />

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"

                        app:cb_color="@color/purple800"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/purple_button"/>

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"

                        app:cb_color="@color/pink800"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/pink_button"/>

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"

                        app:cb_color="@color/orange"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/orange_button"
                        />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"

                >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="306dp"
                    android:layout_gravity="bottom">

                    <at.markushi.ui.CircleButton
                        android:text="left"
                        android:layout_width="83dip"
                        android:layout_height="83dip"

                        app:cb_color="@color/red900"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/cancel_button"

                        android:src="@drawable/ic_back"
                        android:layout_gravity="center_vertical|bottom|left" />

                    <at.markushi.ui.CircleButton
                        android:layout_width="83dip"
                        android:layout_height="83dip"
                        app:cb_color="@color/green1000"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/save_button"
                        android:src="@drawable/ic_yes"
                        android:layout_gravity="center_vertical|bottom|right" />
                </FrameLayout>

                <!-- android:src="@drawable/ic_tick"-->



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
