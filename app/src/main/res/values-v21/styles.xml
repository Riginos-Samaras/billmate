<?xml version="1.0" encoding="utf-8"?>



<resources>
<!-- inherit from the material theme -->
<style name="AppTheme" parent="android:Theme.Material.Light">
    <!-- Main theme colors -->
    <!--   your app branding color for the app bar -->->
    <item name="android:colorPrimary">@color/white</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="android:colorPrimaryDark">@color/blue1000</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="android:colorAccent">@color/blue</item>
    <item name="android:buttonStyle">@style/CKButton</item>
</style>


    <style name="CKButton" parent="android:style/Widget.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">#ff0000</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="AppTheme2" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/green1000</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/green1100</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/blue</item>
    </style>
</resources>